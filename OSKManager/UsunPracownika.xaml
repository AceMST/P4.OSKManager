<Window x:Class="OSKManager.UsunPracownika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSKManager"
        mc:Ignorable="d"
        Title="UsunPracownika"  Height="220.84" Width="272.116" Background="#FF1C78B8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*" />
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Margin="5">Id Pracownika</Label>
            <Label Margin="9">Nazwisko</Label>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="Id_Pracownika" Margin="10" TextChanged="IDn_TextChanged"/>
            <TextBox x:Name="Nazwisko" Margin="10" TextChanged="Nazwisko_TextChanged"/>
            <Button Margin="10" Height="33" Click="Button_Click">
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFAFD408" Offset="0"/>
                        <GradientStop Color="#FF0B587C" Offset="1"/>
                    </RadialGradientBrush>
                </Button.Background> Usuń</Button>
        </StackPanel>
    </Grid>
</Window>
