<Window x:Class="OSKManager.UsunKursanta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSKManager"
        mc:Ignorable="d"
        Title="UsunKursanta" Height="212.269" Width="272.116" Background="#FF1C78B8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*" />
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Margin="5">Id kursanta</Label>
            <Label Margin="9">Numer PKK</Label>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="Id_Kursanta" Margin="10" TextChanged="IDn_TextChanged"/>
            <TextBox x:Name="PKK" Margin="10" TextChanged="PKK_TextChanged"/>
            <Button Margin="10" Height="33" Click="Button_Click">
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFDCDC0B" Offset="0"/>
                        <GradientStop Color="#FF0769AE" Offset="1"/>
                    </RadialGradientBrush>
                </Button.Background> Usuń</Button>
        </StackPanel>
    </Grid>
</Window>
